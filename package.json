{
  "name": "ceri-dev-server",
  "description": "a small development server for building ceri components",
  "version": "1.0.1",
  "homepage": "https://github.com/cerijs",
  "author": {
    "name": "Paul Pflugradt",
    "email": "paul.pflugradt@gmail.com"
  },
  "license": "MIT",
  "bin": {
    "ceri-dev-server": "./cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/cerijs/ceri-dev-server"
  },
  "engines": {
    "node": "*"
  },
  "main": "lib/index.js",
  "files": [
    "lib/*.js",
    "cli.js",
    "index.html"
  ],
  "dependencies": {
    "ceri": "^1.0.0",
    "ceri-loader": "^1.0.0",
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "chokidar": "^1.6.1",
    "commander": "^2.9.0",
    "document-register-element": "^1.3.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.28.0",
    "ip": "^1.1.4",
    "karma": "^1.5.0",
    "karma-chai": "^0.1.0",
    "karma-chai-dom": "^1.1.0",
    "karma-chai-spies": "^0.1.4",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^2.0.2",
    "karma-ceri": "^1.0.0",
    "koa": "^2.0.1",
    "koa-hot-dev-webpack": "^0.1.5",
    "koa-static": "^2.1.0",
    "loader-utils": "^1.0.2",
    "mocha": "^3.2.0",
    "webpack": "^2.2.1",
    "webpack-merge": "^3.0.0"
  },
  "devDependencies": {
    "coffee-loader": "^0.7.2",
    "coffee-script": "^1.12.3",
    "casperjs": "^1.1.3",
    "nodemon": "^1.11.0",
    "rimraf": "^2.5.4",
    "script-runner": "^0.1.6"
  },
  "keywords": [
    "ceri",
    "dev-server",
    "cli"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "prebuild": "rimraf lib/*",
    "build": "coffee --no-header --compile --output lib/ src/*.coffee",
    "watch": "coffee --no-header --watch --output lib/ src/*.coffee",
    "dev": "coffee src/index.coffee",
    "prestatic": "npm run build && rimraf static/*",
    "static": "./index.js --folder test/dev/ --static static/",
    "test": "run-npm --parallel dev --master \"run-npm 'sleep 3' test:*\"",
    "test:build": "coffee --no-header --compile --output test/ test/index.coffee",
    "test:casperjs": "casperjs --verbose test test/index.js",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && npm publish"
  }
}
