  },
  "license": "MIT",
  "bin": {
    "ceri-dev-server": "./cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/cerijs/ceri-dev-server"
  },
  "engines": {
    "node": "*"
  },
  "main": "lib/index.js",
  "files": [
    "lib/*.js",
    "cli.js",
    "index.html"
  ],
  "peerDependencies": {
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "ceri-loader": "^1.1.0",
    "css-loader": "^0.28.4",
    "file-loader": "^0.11.2",
    "html-loader": "^0.4.5"
  },
  "dependencies": {
    "babili-webpack-plugin": "^0.1.2",
    "ceri": "^1.0.18",
    "ceri-loader": "^1.1.0",
    "chokidar": "^1.7.0",
    "commander": "^2.10.0",
    "css-loader": "^0.28.4",
    "document-register-element": "^1.5.0",
    "es6-promise": "^4.1.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "ip": "^1.1.5",
    "karma": "^1.7.0",
    "karma-ceri": "^1.0.2",
    "karma-chai": "^0.1.0",
    "karma-chai-dom": "^1.1.0",
    "karma-chai-spies": "^0.1.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^2.0.3",
    "koa": "^2.3.0",
    "koa-hot-dev-webpack": "^0.1.10",
    "koa-static": "^3.0.0",
    "loader-utils": "^1.1.0",
    "mkdirp": "^0.5.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.0.0",
    "webpack-merge": "^4.1.0"
  },
  "devDependencies": {
    "chai-spies": "^0.7.1",
    "chai": "^4.0.2",
    "chai-webdriverio": "^0.4.0",
    "coffee-loader": "^0.7.3",
    "coffee-script": "^1.12.6",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "script-runner": "^0.1.6",
    "wdio-mocha-framework": "^0.5.10",
    "wdio-selenium-standalone-service": "^0.0.9",
    "wdio-spec-reporter": "^0.1.0",
    "webdriverio": "^4.8.0"
  },
  "keywords": [
    "ceri",
    "dev-server",
    "cli"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "prebuild": "rimraf lib/*",
    "build": "coffee --no-header --compile --output lib/ src/*.coffee",
    "watch": "coffee --no-header --watch --output lib/ src/*.coffee",
    "dev": "coffee src/index.coffee",
    "prestatic": "npm run build && rimraf static/*",
    "static": "./cli.js --static static/",
    "test": "run-npm --parallel dev --master \"run-npm 'sleep 3' wdio\"",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && npm publish"
  }
}
